---
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";

const {
  title = "BourneWeb",
  description = "Agency site",
} = Astro.props;

const path = Astro.url.pathname;
const is = (p: string) => path === p;

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <ViewTransitions />
  </head>

  <body class="min-h-screen bg-[#070A10] text-white">
    <!-- Sticky / persistent top nav -->
    <header
      class="fixed inset-x-0 top-0 z-50"
      transition:persist
    >
      <div class="border-b border-white/10 bg-[#070A10]/55 backdrop-blur-xl">
        <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
          <!-- Brand -->
          <a href="/" class="flex items-center gap-3">
            <span class="grid h-9 w-9 place-items-center rounded-xl bg-gradient-to-br from-emerald-200/90 via-teal-300/90 to-amber-200/90 text-[12px] font-black text-neutral-950 shadow-[0_20px_70px_rgba(0,0,0,0.45)]">
              BW
            </span>
            <span class="text-[16px] font-semibold tracking-tight text-white/90">BourneWeb</span>
          </a>

          <!-- Nav -->
          <nav class="hidden items-center gap-10 text-[14px] text-white/65 md:flex">
            <a class:list={["hover:text-white/90 transition", is("/") ? "text-white/90" : ""]} href="/#services">Services</a>
            <a class="hover:text-white/90 transition" href="/#process">Process</a>
            <a class:list={["hover:text-white/90 transition", path.startsWith("/demos") ? "text-white/90" : ""]} href="/demos">Demos</a>
            <a class="hover:text-white/90 transition" href="/#pricing">Pricing</a>
            <a class="hover:text-white/90 transition" href="/#contact">Contact</a>
          </nav>

          <!-- CTA -->
          <a
            href="/#contact"
            class="rounded-2xl bg-[#d9aa73] px-6 py-2.5 text-[14px] font-semibold text-neutral-950 shadow-[0_18px_70px_rgba(0,0,0,0.35)] hover:brightness-95 transition"
          >
            Get a quote
          </a>
        </div>
      </div>
    </header>

    <!-- Page content -->
    <main class="pt-0">
      <slot />
    </main>
  </body>
</html>
