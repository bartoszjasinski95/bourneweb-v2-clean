---
import Layout from "./Layout.astro";
---

<Layout title="SparkForge Electrical · Demo">
  <header class="el-topnav">
    <div class="el-container el-topnav__inner">
      <!-- Brand -->
      <a class="el-brand" href="#" aria-label="SparkForge Electrical">
        <span class="el-mark" aria-hidden="true">
          <!-- bolt icon -->
          <svg viewBox="0 0 24 24" width="18" height="18" fill="none">
            <path
              d="M13 2 4 13h7l-1 9 10-13h-7l0-7Z"
              stroke="currentColor"
              stroke-width="2"
              stroke-linejoin="round"
            />
          </svg>
        </span>

        <span class="el-brand__text">
          <span class="el-brand__name">SPARKFORGE</span>
          <span class="el-brand__sub">ELECTRICAL</span>
        </span>
      </a>

      <!-- Center nav -->
      <nav class="el-nav" aria-label="Primary">
        <a href="#services">SERVICES</a>
        <a href="#ev">EV CHARGERS</a>
        <a href="#emergency">EMERGENCY</a>
        <a href="#reviews">REVIEWS</a>
        <a href="#areas">AREAS</a>
        <a href="#pricing">PRICING</a>
        <a href="#contact">CONTACT</a>
      </nav>

      <!-- Actions -->
      <div class="el-actions">
        <a class="el-btn el-btn--call" href="tel:+442012345678">
          <span class="el-btn__ico" aria-hidden="true">
            <svg viewBox="0 0 24 24" width="16" height="16" fill="none">
              <path
                d="M7 3h4l1 5-2 1c1 3 4 6 7 7l1-2 5 1v4c0 1-1 2-2 2C11 21 3 13 3 5c0-1 1-2 2-2Z"
                stroke="currentColor"
                stroke-width="2"
                stroke-linejoin="round"
              />
            </svg>
          </span>
          CALL 24/7
        </a>

        <a class="el-btn el-btn--quote" href="#quote">GET QUOTE</a>
      </div>
    </div>
  </header>

  <!-- placeholder tylko żeby było co scrollować podczas testów -->
  <main class="el-page">
    <section class="sf-hero" aria-label="Hero">
  <div class="sf-wrap">
    <div class="sf-hero__grid">
      <!-- LEFT: copy -->
      <div class="sf-hero__copy">
        <div class="sf-kicker">
          <span class="sf-dot" aria-hidden="true"></span>
          <span>24/7 EMERGENCY RESPONSE</span>
        </div>

        <h1 class="sf-hero__title">
          24/7 EMERGENCY<br />
          <span class="sf-lime">ELECTRICIAN</span> IN<br />
          BOURNEMOUTH
        </h1>

        <p class="sf-hero__sub">
          Rapid response • NICEIC certified • Transparent fixed pricing • No hidden fees
        </p>

        <div class="sf-hero__ctas">
          <a class="sf-btn sf-btn--call" href="tel:01202555000">
            <span class="sf-btn__icon" aria-hidden="true">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none">
                <path d="M7 3h3l2 5-2 1c1.2 2.5 3.3 4.6 5.8 5.8l1.2-2 5 2v3c0 1.1-.9 2-2 2C10 21 3 14 3 5c0-1.1.9-2 2-2z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
              </svg>
            </span>
            <span class="sf-btn__stack">
              <span class="sf-btn__small">CALL NOW</span>
              <span class="sf-btn__big">01202 555 000</span>
            </span>
          </a>

          <a class="sf-btn sf-btn--quote" href="#quote">
            <span class="sf-btn__icon" aria-hidden="true">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none">
                <path d="M4 5h16v10H7l-3 3V5z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
              </svg>
            </span>
            <span>GET INSTANT QUOTE</span>
          </a>
        </div>

        <div class="sf-hero__proof" aria-label="Proof points">
          <div class="sf-proof sf-proof--lime">
            <span class="sf-proof__icon" aria-hidden="true">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none">
                <path d="M12 3l8 4v6c0 5-3.5 8.5-8 8.5S4 18 4 13V7l8-4z" stroke="currentColor" stroke-width="2"/>
              </svg>
            </span>
            <div class="sf-proof__text">
              <div class="sf-proof__top">NICEIC</div>
              <div class="sf-proof__bot">Part P compliant</div>
            </div>
          </div>

          <div class="sf-proof sf-proof--cyan">
            <span class="sf-proof__icon" aria-hidden="true">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none">
                <path d="M12 3l2.8 5.7 6.2.9-4.5 4.4 1 6.2-5.5-2.9-5.5 2.9 1-6.2L3 9.6l6.2-.9L12 3z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
              </svg>
            </span>
            <div class="sf-proof__text">
              <div class="sf-proof__top">4.9★ RATING</div>
              <div class="sf-proof__bot">Google reviews</div>
            </div>
          </div>

          <div class="sf-proof sf-proof--orange">
            <span class="sf-proof__icon" aria-hidden="true">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none">
                <path d="M12 8v5l3 2" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                <path d="M21 12a9 9 0 1 1-9-9 9 9 0 0 1 9 9z" stroke="currentColor" stroke-width="2"/>
              </svg>
            </span>
            <div class="sf-proof__text">
              <div class="sf-proof__top">SAME-DAY</div>
              <div class="sf-proof__bot">Slots available</div>
            </div>
          </div>

          <div class="sf-proof sf-proof--lime">
            <span class="sf-proof__icon" aria-hidden="true">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="none">
                <path d="M12 3l8 4v6c0 5-3.5 8.5-8 8.5S4 18 4 13V7l8-4z" stroke="currentColor" stroke-width="2"/>
                <path d="M8 12l2.2 2.2L16.5 8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
            </span>
            <div class="sf-proof__text">
              <div class="sf-proof__top">FULLY</div>
              <div class="sf-proof__bot">Insured</div>
            </div>
          </div>
        </div>
      </div>

      <!-- RIGHT: image -->
      <div class="sf-hero__media" aria-label="Service photo">
        <div class="sf-frame">
          <!-- podmień src na swoje -->
          <img
            src="https://images.unsplash.com/photo-1581092334494-1b5b1b6f0b13?auto=format&fit=crop&w=1200&q=80"
            alt="Electrical panel and wiring"
            loading="lazy"
          />
          <span class="sf-corner sf-corner--tl" aria-hidden="true"></span>
          <span class="sf-corner sf-corner--br" aria-hidden="true"></span>
          <span class="sf-accent sf-accent--lime" aria-hidden="true"></span>
          <span class="sf-accent sf-accent--cyan" aria-hidden="true"></span>
        </div>
      </div>
    </div>
  </div>
</section>

  </main>
</Layout>
