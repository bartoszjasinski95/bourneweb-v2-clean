---
const {
  id = "top",
} = Astro.props;
---

<main class="bm-hero" id={id} aria-label="Barber hero" data-bm-hero>
  <div class="bm-hero__grid">
    <!-- LEFT -->
    <section class="bm-hero__copy">
      <p class="bm-kicker">NEO GENTLEMAN · PREMIUM BARBERSHOP</p>

      <h1 class="bm-title">
        More than<br />
        just a haircut
      </h1>

      <p class="bm-lead">
        Precision fades, clean beard lines, hot towel finishes. Book in seconds — walk out sharper.
      </p>

      <div class="bm-actions">
        <a class="bm-cta" href="#book">
          Book now
          <span class="bm-cta__shine" aria-hidden="true"></span>
        </a>

        <a class="bm-ctaGhost" href="#services">
          View services
        </a>
      </div>

      <div class="bm-chips" aria-label="Popular services">
        <span class="bm-chip">Skin fade <strong>£28</strong></span>
        <span class="bm-chip">Haircut + beard <strong>£30</strong></span>
        <span class="bm-chip">Hot towel shave <strong>£18</strong></span>
      </div>

      <div class="bm-divider" aria-hidden="true"></div>

      <div class="bm-proof" aria-label="Google rating">
        <div class="bm-stars" aria-hidden="true">
          <svg viewBox="0 0 24 24"><path d="M12 2l2.9 6.4 7 .6-5.3 4.6 1.7 6.8L12 17.6 5.7 20.4l1.7-6.8L2.1 9l7-.6L12 2z"/></svg>
          <svg viewBox="0 0 24 24"><path d="M12 2l2.9 6.4 7 .6-5.3 4.6 1.7 6.8L12 17.6 5.7 20.4l1.7-6.8L2.1 9l7-.6L12 2z"/></svg>
          <svg viewBox="0 0 24 24"><path d="M12 2l2.9 6.4 7 .6-5.3 4.6 1.7 6.8L12 17.6 5.7 20.4l1.7-6.8L2.1 9l7-.6L12 2z"/></svg>
          <svg viewBox="0 0 24 24"><path d="M12 2l2.9 6.4 7 .6-5.3 4.6 1.7 6.8L12 17.6 5.7 20.4l1.7-6.8L2.1 9l7-.6L12 2z"/></svg>
          <svg class="is-part" viewBox="0 0 24 24">
            <defs>
              <linearGradient id="bmHalf" x1="0" x2="1">
                <stop offset="55%" stop-color="currentColor"/>
                <stop offset="55%" stop-color="rgba(255,255,255,.18)"/>
              </linearGradient>
            </defs>
            <path fill="url(#bmHalf)" d="M12 2l2.9 6.4 7 .6-5.3 4.6 1.7 6.8L12 17.6 5.7 20.4l1.7-6.8L2.1 9l7-.6L12 2z"/>
          </svg>
        </div>

        <div class="bm-proof__txt">
          <div class="bm-proof__top"><strong>4.9/5</strong> on Google</div>
          <div class="bm-proof__sub">300+ happy clients · real reviews</div>
        </div>
      </div>

      <div class="bm-metrics" aria-label="Quick facts">
        <div class="bm-metric">
          <div class="bm-metric__icon" aria-hidden="true">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
              <path d="M12 7v6l4 2" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M12 22a10 10 0 1 0-10-10 10 10 0 0 0 10 10Z" stroke="currentColor" stroke-width="1.6"/>
            </svg>
          </div>
          <div class="bm-metric__body">
            <div class="bm-metric__top">Next available</div>
            <div class="bm-metric__val">Today · 16:10</div>
          </div>
        </div>

        <div class="bm-metric">
          <div class="bm-metric__icon" aria-hidden="true">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
              <path d="M12 21s7-4.6 7-11a7 7 0 1 0-14 0c0 6.4 7 11 7 11Z" stroke="currentColor" stroke-width="1.6" stroke-linejoin="round"/>
              <path d="M12 10.5a2 2 0 1 0 0-4 2 2 0 0 0 0 4Z" stroke="currentColor" stroke-width="1.6"/>
            </svg>
          </div>
          <div class="bm-metric__body">
            <div class="bm-metric__top">Location</div>
            <div class="bm-metric__val">Central · 2 min walk</div>
          </div>
        </div>

        <div class="bm-metric">
          <div class="bm-metric__icon" aria-hidden="true">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
              <path d="M4 7h16" stroke="currentColor" stroke-width="1.6" stroke-linecap="round"/>
              <path d="M7 4v6" stroke="currentColor" stroke-width="1.6" stroke-linecap="round"/>
              <path d="M17 4v6" stroke="currentColor" stroke-width="1.6" stroke-linecap="round"/>
              <path d="M6 20h12a2 2 0 0 0 2-2V9H4v9a2 2 0 0 0 2 2Z" stroke="currentColor" stroke-width="1.6" stroke-linejoin="round"/>
            </svg>
          </div>
          <div class="bm-metric__body">
            <div class="bm-metric__top">Open today</div>
            <div class="bm-metric__val">10:00 – 19:00</div>
          </div>
        </div>
      </div>
    </section>

    <!-- RIGHT -->
    <aside class="bm-hero__media" aria-label="Studio photo">
      <div class="bm-hero__ring" aria-hidden="true"></div>

      <div class="bm-photo" role="img" aria-label="Barber shaving client"></div>
      <div class="bm-photo__vignette" aria-hidden="true"></div>

      <div class="bm-floatCard" aria-label="Booking card">
        <div class="bm-floatCard__top">
          <div class="bm-floatCard__title">Book in seconds</div>
          <div class="bm-floatCard__pill">No app</div>
        </div>

        <div class="bm-floatCard__row">
          <span class="bm-floatLabel">Haircut</span>
          <span class="bm-floatValue">45 min</span>
        </div>
        <div class="bm-floatCard__row">
          <span class="bm-floatLabel">Beard</span>
          <span class="bm-floatValue">15 min</span>
        </div>

        <a class="bm-floatBtn" href="#book">Pick a slot</a>
        <div class="bm-floatHint">Instant confirmation · free cancellation</div>
      </div>
    </aside>
  </div>
</main>
