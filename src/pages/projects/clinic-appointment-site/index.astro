  <script is:inline>
    (() => {
      const root = document.querySelector("[data-faq]");
      if (!root) return;

      const items = Array.from(root.querySelectorAll(".cl-faq__item"));

      function setOpen(item, open) {
        const btn = item.querySelector(".cl-faq__btn");
        const panel = item.querySelector(".cl-faq__panel");
        const icon = item.querySelector(".cl-faq__icon");

        item.classList.toggle("is-open", open);
        btn.setAttribute("aria-expanded", open ? "true" : "false");

        if (open) panel.removeAttribute("hidden");
        else panel.setAttribute("hidden", "");

        // swap icon
        icon.classList.toggle("cl-faq__icon--plus", !open);
        icon.classList.toggle("cl-faq__icon--minus", open);
      }

      // ensure only one open initially
      let hasOpen = false;
      items.forEach((it) => {
        const open = it.classList.contains("is-open") && !hasOpen;
        hasOpen ||= open;
        setOpen(it, open);
      });

      root.addEventListener("click", (e) => {
        const btn = e.target.closest(".cl-faq__btn");
        if (!btn) return;

        const item = btn.closest(".cl-faq__item");
        const isOpen = item.classList.contains("is-open");

        items.forEach((it) => setOpen(it, false));
        setOpen(item, !isOpen);
      });
    })();
  </script>
