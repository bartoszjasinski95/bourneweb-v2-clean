---
import BaseLayout from "../layouts/BaseLayout.astro";
const year = new Date().getFullYear();
---

<BaseLayout title="BourneWeb · Web Design & Development" description="Modern websites for local businesses. Fast, sharp, conversion-first.">
  <main class="min-h-screen pt-20">

    <!-- HERO (BourneWeb) -->
<section class="relative overflow-hidden">
  <!-- background glow -->
  <div
    class="pointer-events-none absolute inset-0 -z-10"
    style="background:
      radial-gradient(1200px 700px at 50% 10%, rgba(22, 87, 88, 0.55), transparent 60%),
      radial-gradient(900px 600px at 70% 35%, rgba(18, 62, 82, 0.55), transparent 62%),
      radial-gradient(800px 520px at 30% 40%, rgba(10, 18, 30, 0.9), transparent 60%);"
  ></div>
  <div class="pointer-events-none absolute inset-0 -z-20 bg-[#06070b]"></div>

  <!-- TOP NAV (sticky + glass) -->
<header class="fixed inset-x-0 top-0 z-50">
  <div class="border-b border-white/10 bg-black/20 backdrop-blur-xl">
    <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-5">
      <!-- left: brand -->
      <a href="/" class="flex items-center gap-3">
        <span class="grid h-9 w-9 place-items-center rounded-xl bg-gradient-to-br from-emerald-300/70 to-amber-200/70 text-[12px] font-extrabold text-black">
          BW
        </span>
        <span class="text-[16px] font-semibold text-white/85">BourneWeb</span>
      </a>

      <!-- center: nav -->
      <nav class="hidden items-center gap-10 text-[14px] text-white/70 md:flex">
        <a href="#services" class="hover:text-white/90">Services</a>
        <a href="#process" class="hover:text-white/90">Process</a>
        <a href="#demos" class="hover:text-white/90">Demos</a>
        <a href="#pricing" class="hover:text-white/90">Pricing</a>
        <a href="#contact" class="hover:text-white/90">Contact</a>
      </nav>

      <!-- right: cta -->
      <a
        href="#contact"
        class="rounded-full bg-[#d9aa73] px-6 py-2.5 text-[14px] font-semibold text-neutral-950 shadow-[0_18px_70px_rgba(0,0,0,0.35)] hover:brightness-95"
      >
        Get a quote
      </a>
    </div>
  </div>
</header>

  </header>

  <!-- HERO GRID -->
  <div class="mx-auto max-w-7xl px-6 lg:px-10 pb-20 pt-16 md:pb-28 md:pt-20">
    <div class="grid gap-14 md:grid-cols-[1.05fr_0.95fr] md:items-center">
      <!-- LEFT -->
      <div>
        <!-- location pill -->
        <div class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-4 py-2 text-sm text-white/70 backdrop-blur">
          <span class="h-1.5 w-1.5 rounded-full bg-emerald-300"></span>
          Bournemouth · Poole · Christchurch
        </div>

        <h1 class="mt-6 text-balance text-[56px] font-semibold leading-[0.92] tracking-tight text-white/85 md:text-[74px]">
          Websites that
          <span class="bg-gradient-to-r from-[#e6c38f] via-[#bfe9d9] to-[#42e6d6] bg-clip-text text-transparent">
            load fast
          </span>
          <br />
          <span class="text-white/75">and sell harder.</span>
        </h1>

        <p class="mt-6 max-w-xl text-base leading-relaxed text-white/55">
          Ultra-fast builds. Clean SEO. Real conversions. We&apos;re a
          Bournemouth web studio crafting websites that get your
          business seen, booked, and paid.
        </p>

        <!-- buttons -->
        <div class="mt-8 flex flex-wrap items-center gap-4">
          <a
            href="#contact"
            class="inline-flex items-center gap-3 rounded-2xl bg-[#d9aa73] px-6 py-3 text-sm font-semibold text-neutral-950 shadow-[0_18px_70px_rgba(0,0,0,0.40)] hover:brightness-95"
          >
            Get a quote
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" aria-hidden="true">
              <path d="M7 17L17 7" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <path d="M9 7h8v8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </a>

          <a
            href="#demos"
            class="inline-flex items-center justify-center rounded-2xl border border-white/12 bg-white/6 px-6 py-3 text-sm font-semibold text-white/85 shadow-[0_18px_60px_rgba(0,0,0,0.25)] hover:bg-white/10"
          >
            See demos
          </a>
        </div>

        <!-- lighthouse pill -->
        <div class="mt-10 inline-flex items-center gap-3 rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-white/70 backdrop-blur">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-emerald-300">
            <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
          </svg>
          <span class="text-white/65">Avg. Lighthouse score</span>
          <span class="font-semibold text-emerald-300">95+</span>
        </div>

        <!-- feature pills -->
        <div class="mt-5 flex flex-wrap gap-3">
          {[
            "SEO-ready",
            "Mobile-first",
            "Book-more leads",
          ].map((t) => (
            <span class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-4 py-2 text-sm text-white/65 backdrop-blur">
              <span class="grid h-5 w-5 place-items-center rounded-full border border-white/10 bg-white/5">
                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-emerald-300">
                  <path d="M20 6L9 17l-5-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
              {t}
            </span>
          ))}
        </div>
      </div>

      <!-- RIGHT (mock browser card) -->
      <div class="relative">
        <!-- floating pills -->
        <div class="absolute -top-10 left-6 z-10 inline-flex items-center gap-2 rounded-xl bg-[#2fe6d3] px-4 py-2 text-sm font-semibold text-neutral-950 shadow-[0_18px_70px_rgba(0,0,0,0.35)]">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M12 8v4l3 2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" stroke="currentColor" stroke-width="2"/>
          </svg>
          Launch in 7 days
        </div>

        <div class="absolute -top-10 right-6 z-10 inline-flex items-center gap-2 rounded-xl bg-[#d9aa73] px-4 py-2 text-sm font-semibold text-neutral-950 shadow-[0_18px_70px_rgba(0,0,0,0.35)]">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M20 10l-8-8H4v8l8 8 8-8Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
            <path d="M7 7h.01" stroke="currentColor" stroke-width="3" stroke-linecap="round"/>
          </svg>
          From £1,295
        </div>

        <!-- browser -->
        <div class="rounded-[28px] border border-white/12 bg-white/5 p-4 shadow-[0_28px_120px_rgba(0,0,0,0.55)] backdrop-blur">
          <div class="rounded-[22px] border border-white/10 bg-[#0b0f16]/80">
            <!-- top bar -->
            <div class="flex items-center gap-3 border-b border-white/10 px-4 py-3">
              <div class="flex gap-2">
                <span class="h-2.5 w-2.5 rounded-full bg-rose-400/80"></span>
                <span class="h-2.5 w-2.5 rounded-full bg-amber-300/80"></span>
                <span class="h-2.5 w-2.5 rounded-full bg-emerald-300/80"></span>
              </div>
              <div class="ml-2 flex-1">
                <div class="mx-auto w-[210px] rounded-full border border-white/10 bg-white/5 px-4 py-1 text-center text-xs text-white/45">
                  localcafe.co.uk
                </div>
              </div>
            </div>

            <!-- content (LIVE DEMO PREVIEW) -->
            <div class="p-4">
              <div class="relative overflow-hidden rounded-2xl border border-white/10 bg-black/30">
                <div
                  class="pointer-events-none absolute inset-0 opacity-70"
                  style="background: radial-gradient(900px 520px at 55% 0%, rgba(255,255,255,0.06), transparent 62%);"
                ></div>

                <div class="relative aspect-[16/10] w-full bg-[#06070b]">
                  <iframe
                    class="h-full w-full border-0"
                    src="/projects/local-restaurant-dining-site"
                    title="Restaurant demo preview"
                    loading="lazy"
                  ></iframe>

                  <div class="pointer-events-none absolute bottom-4 left-4 inline-flex items-center gap-2 rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-xs font-semibold text-white/75 backdrop-blur">
                    <span class="h-2 w-2 rounded-full bg-emerald-300"></span>
                    Restaurant demo · live preview
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>

        <!-- subtle border glow -->
        <div class="pointer-events-none absolute inset-0 -z-10 rounded-[32px] blur-2xl"
          style="background: radial-gradient(600px 360px at 50% 45%, rgba(46, 230, 211, 0.16), transparent 60%);"
        ></div>
      </div>
    </div>
  </div>
</section>
<!-- PROOF STRIP -->
<section class="relative">
  <div class="mx-auto max-w-6xl px-6 pb-16 pt-10 md:pb-20">
    <!-- top feature row -->
    <div class="mx-auto flex max-w-4xl items-center justify-center gap-10 md:gap-14">
      <!-- item -->
      <div class="flex items-center gap-3">
        <span class="grid h-10 w-10 place-items-center rounded-xl border border-white/12 bg-white/5 shadow-[0_18px_60px_rgba(0,0,0,0.35)]">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-[#2fe6d3]">
            <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
          </svg>
        </span>
        <span class="text-sm font-medium text-white/75">Ultra-fast builds</span>
      </div>

      <!-- separator -->
      <div class="hidden h-8 w-px bg-white/12 md:block"></div>

      <!-- item -->
      <div class="flex items-center gap-3">
        <span class="grid h-10 w-10 place-items-center rounded-xl border border-white/12 bg-white/5 shadow-[0_18px_60px_rgba(0,0,0,0.35)]">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-[#2fe6d3]">
            <path d="M4 19V5" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            <path d="M4 19H20" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            <path d="M7 15l4-4 3 3 5-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </span>
        <span class="text-sm font-medium text-white/75">Clean SEO</span>
      </div>

      <!-- separator -->
      <div class="hidden h-8 w-px bg-white/12 md:block"></div>

      <!-- item -->
      <div class="flex items-center gap-3">
        <span class="grid h-10 w-10 place-items-center rounded-xl border border-white/12 bg-white/5 shadow-[0_18px_60px_rgba(0,0,0,0.35)]">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-[#2fe6d3]">
            <path d="M12 2l7 4v6c0 5-3 9-7 10-4-1-7-5-7-10V6l7-4Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
            <path d="M9 12l2 2 4-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </span>
        <span class="text-sm font-medium text-white/75">Real conversions</span>
      </div>
    </div>

    <!-- thin divider line -->
    <div class="mx-auto mt-10 h-px w-full max-w-5xl bg-white/10"></div>

    <!-- trust line -->
    <p class="mt-10 text-center text-xs font-medium tracking-wide text-white/35">
      Trusted by local businesses across Dorset
    </p>

    <!-- logo pills -->
    <div class="mx-auto mt-6 grid w-full max-w-5xl grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-5">
      {["Business 1", "Business 2", "Business 3", "Business 4", "Business 5"].map((b) => (
        <div class="flex h-12 items-center justify-center rounded-2xl border border-white/10 bg-white/5 text-xs text-white/20 backdrop-blur">
          {b}
        </div>
      ))}
    </div>
  </div>
</section>
<!-- WHAT WE BUILD (section header) -->
<section id="services" class="relative">
  <div class="mx-auto max-w-6xl px-6 py-20 md:py-28">
    <div class="mx-auto max-w-3xl text-center">
      <!-- pill -->
      <span class="inline-flex items-center rounded-full border border-[#2fe6d3]/25 bg-[#2fe6d3]/10 px-4 py-2 text-sm font-semibold text-[#2fe6d3] shadow-[0_18px_70px_rgba(0,0,0,0.35)]">
        What we build
      </span>

      <!-- title -->
      <h2 class="mt-8 text-balance text-[44px] font-semibold leading-[1.05] tracking-tight text-white/85 md:text-[56px]">
        Sites that work as
        <br />
        <span class="text-white/85">
          <span class="text-[#d9aa73]">hard</span>
          <span class="text-white/85"> as </span>
          <span class="text-[#2fe6d3]">you do</span>
        </span>
      </h2>

      <!-- subcopy -->
      <p class="mt-6 text-base leading-relaxed text-white/55">
        From brochure sites to booking engines, we craft digital tools that
        <br class="hidden sm:block" />
        drive real business results.
      </p>
    </div>
  </div>
  <!-- services cards -->
<div class="mx-auto mt-14 max-w-6xl">
  <div class="grid gap-6 md:grid-cols-3">
    {[
      {
        title: "Business Websites",
        desc: "Sharp, fast websites that turn visitors into customers. Built for trade, service, and retail.",
        icon: "globe",
        tags: ["5-page setup", "Contact forms", "Google Maps"],
      },
      {
        title: "Local SEO Sites",
        desc: "Get found in Bournemouth, Poole, and beyond. Optimized from day one for search rankings.",
        icon: "search",
        tags: ["Schema markup", "Speed optimized", "Analytics"],
      },
      {
        title: "Booking & E-commerce",
        desc: "Take payments, manage bookings, sell products. Whatever you need to get paid online.",
        icon: "cart",
        tags: ["Stripe ready", "Calendars", "Inventory"],
      },
      {
        title: "Mobile-First Design",
        desc: "60% of traffic is mobile. We design phone-first, then scale up to desktop beautifully.",
        icon: "mobile",
        tags: ["Touch-friendly", "Fast loading", "App-like feel"],
      },
      {
        title: "Custom Development",
        desc: "Need something unique? We build bespoke features, integrations, and web applications.",
        icon: "code",
        tags: ["APIs", "Portals", "Dashboards"],
      },
      {
        title: "Website Rescue",
        desc: "Slow site? Poor rankings? We audit, rebuild, and relaunch with modern web tech.",
        icon: "bolt",
        tags: ["Audit included", "Migration", "Training"],
        featured: true,
      },
    ].map((c) => (
      <article
        class:list={[
          "relative overflow-hidden rounded-[28px] border p-8 md:p-9",
          c.featured
            ? "border-[#2fe6d3]/35 bg-white/[0.04] shadow-[0_28px_120px_rgba(0,0,0,0.55)]"
            : "border-white/10 bg-white/[0.04] shadow-[0_28px_120px_rgba(0,0,0,0.45)]",
        ]}
      >
        {/* subtle top highlight */}
        <div
          class:list={[
            "pointer-events-none absolute inset-0 opacity-70",
            c.featured ? "opacity-100" : "opacity-60",
          ]}
          style={c.featured
            ? "background: radial-gradient(800px 420px at 70% 30%, rgba(46,230,211,0.18), transparent 60%), radial-gradient(700px 360px at 30% 0%, rgba(217,170,115,0.10), transparent 62%);"
            : "background: radial-gradient(700px 360px at 40% 0%, rgba(255,255,255,0.06), transparent 60%);"}
        />

        <div class="relative">
          {/* icon */}
          <div
            class:list={[
              "grid h-12 w-12 place-items-center rounded-2xl border bg-white/5",
              c.featured ? "border-[#2fe6d3]/25" : "border-white/12",
            ]}
          >
            {c.icon === "globe" && (
              <svg width="22" height="22" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-[#2fe6d3]">
                <path d="M12 22a10 10 0 1 0 0-20 10 10 0 0 0 0 20Z" stroke="currentColor" stroke-width="2"/>
                <path d="M2 12h20" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                <path d="M12 2c2.8 2.6 4.5 6.2 4.5 10S14.8 19.4 12 22C9.2 19.4 7.5 15.8 7.5 12S9.2 4.6 12 2Z" stroke="currentColor" stroke-width="2"/>
              </svg>
            )}
            {c.icon === "search" && (
              <svg width="22" height="22" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-[#2fe6d3]">
                <path d="M11 19a8 8 0 1 0 0-16 8 8 0 0 0 0 16Z" stroke="currentColor" stroke-width="2"/>
                <path d="M21 21l-4.2-4.2" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
            )}
            {c.icon === "cart" && (
              <svg width="22" height="22" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-[#2fe6d3]">
                <path d="M6 6h15l-2 9H7L6 6Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
                <path d="M6 6l-1-3H2" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                <path d="M9 20a1 1 0 1 0 0-2 1 1 0 0 0 0 2ZM17 20a1 1 0 1 0 0-2 1 1 0 0 0 0 2Z" fill="currentColor"/>
              </svg>
            )}
            {c.icon === "mobile" && (
              <svg width="22" height="22" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-[#2fe6d3]">
                <path d="M8 2h8a2 2 0 0 1 2 2v16a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2Z" stroke="currentColor" stroke-width="2"/>
                <path d="M10 19h4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
            )}
            {c.icon === "code" && (
              <svg width="22" height="22" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-[#2fe6d3]">
                <path d="M9 18 3 12l6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M15 6l6 6-6 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            )}
            {c.icon === "bolt" && (
              <svg width="22" height="22" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="text-[#2fe6d3]">
                <path d="M13 2 3 14h9l-1 8 10-12h-9l1-8Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
              </svg>
            )}
          </div>

          <h3 class:list={["mt-6 text-xl font-semibold tracking-tight", c.featured ? "text-[#2fe6d3]" : "text-white/90"]}>
            {c.title}
          </h3>

          <p class="mt-3 text-sm leading-relaxed text-white/55">
            {c.desc}
          </p>

          <div class="mt-8 flex flex-wrap gap-2">
            {c.tags.map((t) => (
              <span class="inline-flex items-center rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs text-white/55">
                {t}
              </span>
            ))}
          </div>
        </div>
      </article>
    ))}
  </div>
</div>
</section>
<!-- MINI CTA -->
<section class="relative">
  <div class="mx-auto max-w-6xl px-6 py-24 md:py-28">
    <div class="mx-auto max-w-xl text-center">
      <p class="text-sm font-medium text-white/45">
        Not sure what you need?
      </p>

      <a
        href="#contact"
        class="mt-5 inline-flex items-center justify-center rounded-2xl border border-white/12 bg-white/5 px-7 py-3 text-sm font-semibold text-white/85 shadow-[0_22px_90px_rgba(0,0,0,0.45)] backdrop-blur hover:bg-white/10"
      >
        Let&apos;s talk about your project
      </a>
    </div>
  </div>
</section>

